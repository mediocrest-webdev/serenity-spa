---
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";
import "../styles/global.css";
---
<!DOCTYPE html>
<html lang="en-US">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Title Tag with Keywords -->
    <title>Serenity Spa | Massage, Spa, Facial, and Waxing Services</title>

    <!-- Meta Descriptions for SEO -->
    <meta name="description" content="Discover ultimate relaxation at Serenity Spa. We offer premium massage, spa, facial, and waxing services tailored to rejuvenate your body and mind. Book your appointment today!">

    <!-- SEO Keywords -->
    <meta name="keywords" content="massage services, spa services, facial services, waxing services, relaxation, Serenity Spa, spa treatments, body massage, skincare, beauty services, wellness spa">

    <!-- Open Graph Tags for Social Sharing -->
    <meta property="og:title" content="Serenity Spa | Massage, Spa, Facial, and Waxing Services">
    <meta property="og:description" content="Visit Serenity Spa for top-rated massage, spa, facial, and waxing services. Treat yourself to luxury and relaxation with our professional care.">
    <meta property="og:image" content="https://www.serenityspa.com/images/hero-img.jpg">
    <meta property="og:url" content="https://www.serenityspa.com">
    <meta property="og:type" content="website">
    <meta property="og:site_name" content="Serenity Spa">

    <!-- Twitter Card for Sharing -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="Serenity Spa | Massage, Spa, Facial, and Waxing Services">
    <meta name="twitter:description" content="Serenity Spa offers premium massage, facial, waxing, and spa services. Relax, refresh, and rejuvenate with us.">
    <meta name="twitter:image" content="https://www.serenityspa.com/images/serenity-spa-twitter.jpg">
    <meta name="twitter:site" content="@SerenitySpa">

    <!-- Robots Tag (to ensure the page is indexed) -->
    <meta name="robots" content="index, follow">

    <!-- Canonical URL (avoiding duplicate content issues) -->
    <link rel="canonical" href="https://www.serenityspa.com">

    <!-- Favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="/favicon_io/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon_io/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon_io/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">

    <!-- Author -->
    <meta name="author" content="Serenity Spa">

    <!-- Theme Color -->
    <meta name="theme-color" content="#ffffff">
</head>
<body class="antialiased bg-slate-50">
    <Navbar />
    <slot/>
    <Footer />
</body>
</html>

