---
import { Picture } from 'astro:assets';
import HeroImg from "../images/hero-image.jpg";
import HeroImgM from "../images/hero-image-m.jpg";

---
<!-- Hero Section -->
<section id="#" class="relative space-y-8 mb-20 md:mb-24">
  <div class="flex flex-col sm:justify-center items-center max-w-xl lg:max-w-3xl mx-auto pt-8 space-y-2 md:space-y-4">
    <h1 class="text-4xl font-medium tracking-tight leading-none sm:text-center ">
      Premium Massage, Facial, Waxing, and Spa Services
    </h1>
    <p class="text-base sm:text-lg text-contrast max-w-lg sm:text-center">
      Serenity Spa provides expert spa services that rejuvenate your body, soothe your mind, and promote overall well-being.
    </p>
  </div>

  <div class="relative mt-md">
    <Picture
      src={HeroImg}
      alt="topless woman lying on bed getting massage"
      title="topless woman lying on bed getting massage"
      class="hidden md:block w-full h-80 sm:h-[480px] object-cover rounded-xl"
      loading="eager"
      fetchpriority='high'
    />
    <Picture
      src={HeroImgM}
      alt="topless woman lying on bed getting massage"
      title="topless woman lying on bed getting massage"
      class="md:hidden w-full h-80 sm:h-[480px] object-cover rounded-xl"
      loading="eager"
      fetchpriority='high'
    />
  </div>
</section>
<!-- End Hero Section -->