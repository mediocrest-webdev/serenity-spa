---
import Button from "./Button.astro";
---
<header class="sticky top-0 z-10">
  <!-- Navigation bar -->
  <nav class="w-full bg-slate-50 backdrop-blur-md bg-opacity-40 border">
    <div class="flex flex-wrap items-center justify-between max-w-screen-xl p-4 mx-auto lg:px-8">
      
      <!-- Logo and site name -->
      <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
        <span class="text-lg md:text-xl font-semibold tracking-tight whitespace-nowrap text-accent">
          Serenity Spa
        </span>
      </a>
      
      <!-- Action buttons and menu toggle button -->
      <div class="flex space-x-3 md:order-2 rtl:space-x-reverse">
        <!-- Inquire Now button -->
        <Button style="flex items-center gap-2 bg-primary border cursor-pointer transition-color duration-300 ease-in-out hover:bg-accent hover:text-white shadow-sm font-medium rounded-full px-6 py-3 hidden lg:flex" link="tel:09123456789" text="Inquire Now" />
        
        <!-- Mobile menu toggle button -->
        <button id="menu-toggle" type="button" class="inline-flex items-center justify-center w-10 h-10 p-2 text-gray-500 rounded-lg lg:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200" aria-controls="navbar-sticky" aria-expanded="false">
          <span class="sr-only">Open main menu</span>
          <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/>
          </svg>
        </button>
      </div>
      
      <!-- Navigation links (hidden on mobile, visible on larger screens) -->
      <div class="items-center justify-between hidden w-full lg:flex md:w-auto md:order-1" id="navbar-sticky">
        <ul class="flex flex-col p-2 mt-2 font-medium rounded-lg md:p-4 md:space-x-4 lg:space-x-8 rtl:space-x-reverse md:flex-row md:mt-0 md:border-0">
          <!-- Navigation items -->
          <li>
            <a href="/" class="block px-3 py-2 text-white rounded bg-accent md:bg-transparent md:text-accent md:p-0 " aria-current="page">Home</a>
          </li>
          <li>
            <a href="#services" class="block px-3 py-2 text-gray-900 rounded md:hover:bg-transparent md:hover:text-accent md:p-0 ">Services</a>
          </li>
          <li>
            <a href="#features" class="block px-3 py-2 text-gray-900 rounded md:hover:bg-transparent md:hover:text-accent md:p-0 ">Features</a>
          </li>
          <li>
            <a href="#gallery" class="block px-3 py-2 text-gray-900 rounded md:hover:bg-transparent md:hover:text-accent md:p-0 ">Gallery</a>
          </li>
          <li>
            <a href="#faq" class="block px-3 py-2 text-gray-900 rounded md:hover:bg-transparent md:hover:text-accent md:p-0 ">FAQs</a>
          </li>
          <li>
            <a href="#testimonials" class="block px-3 py-2 text-gray-900 rounded md:hover:bg-transparent md:hover:text-accent md:p-0 ">Testimonials</a>
          </li>
          <li>
            <a href="#contact" class="block px-3 py-2 text-gray-900 rounded md:hover:bg-transparent md:hover:text-accent md:p-0 ">Contact</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>

<script is:inline>
  // JavaScript for toggling the mobile menu visibility
  document.getElementById('menu-toggle').addEventListener('click', function() {
    // Toggle 'hidden' class to show/hide the menu on small screens
    const navbar = document.getElementById('navbar-sticky');
    navbar.classList.toggle('hidden');
  });

  // Close the mobile menu when a navigation link is clicked
  document.querySelectorAll('#navbar-sticky a').forEach(link => {
    link.addEventListener('click', () => {
      const navbar = document.getElementById('navbar-sticky');
      navbar.classList.add('hidden'); // Add 'hidden' class to close the menu
    });
  });
</script>

